<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane id="background" prefHeight="400.0" prefWidth="700.0" stylesheets="@style.css"
            xmlns="https://javafx.com/javafx"
            xmlns:fx="https://javafx.com/fxml">
    <center>
        <VBox alignment="CENTER" spacing="30" stylesheets="@style.css" BorderPane.alignment="CENTER">
            <children>
                <Label alignment="CENTER" styleClass="inputLabel" stylesheets="@style.css"
                       text="Choose 2 leaders"/>
                <HBox alignment="CENTER" spacing="20">
                    <children>
                        <ToggleButton fx:id="leader1Toggle" styleClass="leaderToggle" mnemonicParsing="false">
                            <graphic>
                                <ImageView fx:id="leader1Img" styleClass="leaderImg" pickOnBounds="true" preserveRatio="true" fitHeight="200.0"/>
                            </graphic>
                        </ToggleButton>
                        <ToggleButton fx:id="leader2Toggle" styleClass="leaderToggle" mnemonicParsing="false">
                            <graphic>
                                <ImageView fx:id="leader2Img" styleClass="leaderImg" pickOnBounds="true" preserveRatio="true" fitHeight="200.0"/>
                            </graphic>
                        </ToggleButton>
                        <ToggleButton fx:id="leader3Toggle" styleClass="leaderToggle" mnemonicParsing="false">
                            <graphic>
                                <ImageView fx:id="leader3Img" styleClass="leaderImg" pickOnBounds="true" preserveRatio="true" fitHeight="200.0"/>
                            </graphic>
                        </ToggleButton>
                        <ToggleButton fx:id="leader4Toggle" styleClass="leaderToggle" mnemonicParsing="false">
                            <graphic>
                                <ImageView fx:id="leader4Img" styleClass="leaderImg" pickOnBounds="true" preserveRatio="true" fitHeight="200.0"/>
                            </graphic>
                        </ToggleButton>
                    </children>
                </HBox>
                <Button fx:id="chooseLeadersBtn" mnemonicParsing="false" styleClass="btn" stylesheets="@style.css"
                        text="Confirm"/>
            </children>
        </VBox>
    </center>
</BorderPane>