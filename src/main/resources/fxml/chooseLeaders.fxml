<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane id="backgroundStart" prefHeight="600.0" prefWidth="950.0" xmlns="https://javafx.com/javafx"
           xmlns:fx="https://javafx.com/fxml">
    <VBox alignment="CENTER" spacing="30">
        <Label styleClass="inputLabel" text="Choose 2 leaders"/>
        <HBox alignment="CENTER" spacing="20">
            <ToggleButton fx:id="leader1Toggle" styleClass="leaderToggle">
                <graphic>
                    <ImageView fx:id="leader1Img" styleClass="leaderImg" preserveRatio="true" fitHeight="300.0"/>
                </graphic>
            </ToggleButton>
            <ToggleButton fx:id="leader2Toggle" styleClass="leaderToggle">
                <graphic>
                    <ImageView fx:id="leader2Img" styleClass="leaderImg" preserveRatio="true" fitHeight="300.0"/>
                </graphic>
            </ToggleButton>
            <ToggleButton fx:id="leader3Toggle" styleClass="leaderToggle">
                <graphic>
                    <ImageView fx:id="leader3Img" styleClass="leaderImg" preserveRatio="true" fitHeight="300.0"/>
                </graphic>
            </ToggleButton>
            <ToggleButton fx:id="leader4Toggle" styleClass="leaderToggle">
                <graphic>
                    <ImageView fx:id="leader4Img" styleClass="leaderImg" preserveRatio="true" fitHeight="300.0"/>
                </graphic>
            </ToggleButton>
        </HBox>
        <Button fx:id="chooseLeadersBtn" styleClass="btn" text="Confirm"/>
    </VBox>
</StackPane>