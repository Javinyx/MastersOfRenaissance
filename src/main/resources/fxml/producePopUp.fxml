<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.Image?>
<StackPane id="popUp" xmlns="https://javafx.com/javafx" xmlns:fx="https://javafx.com/fxml" prefHeight="400.0" prefWidth="550.0">
    <VBox alignment="CENTER" spacing="20">
        <Label styleClass="inputLabelSmall" text="Choose which cards you want to start production with"/>

        <HBox alignment="CENTER" spacing="20">
            <ToggleButton fx:id="basicProduceToggle" styleClass="leaderToggle">
                <graphic>
                    <ImageView fx:id="basicProduceImg" styleClass="leaderImg" preserveRatio="true" fitWidth="150.0">
                        <Image url="@../img/ui/produceChoice.png"/>
                    </ImageView>
                </graphic>
            </ToggleButton>
            <ToggleButton fx:id="produce2Toggle" styleClass="leaderToggle">
                <graphic>
                    <ImageView fx:id="produce2Img" styleClass="leaderImg" preserveRatio="true" fitWidth="150.0"/>
                </graphic>
            </ToggleButton>
            <ToggleButton fx:id="produce3Toggle" styleClass="leaderToggle">
                <graphic>
                    <ImageView fx:id="produce3Img" styleClass="leaderImg" preserveRatio="true" fitWidth="150.0"/>
                </graphic>
            </ToggleButton>
            <ToggleButton fx:id="produce4Toggle" styleClass="leaderToggle">
                <graphic>
                    <ImageView fx:id="produce4Img" styleClass="leaderImg" preserveRatio="true" fitWidth="150.0"/>
                </graphic>
            </ToggleButton>
        </HBox>
        <Button fx:id="produceConfirmBtn" styleClass="btn" text="Confirm"/>
        <Button fx:id="produceBackBtn" styleClass="btn" text="Back"/>
    </VBox>
</StackPane>