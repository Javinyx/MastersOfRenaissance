<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<AnchorPane id="popUp" xmlns="https://javafx.com/javafx" xmlns:fx="https://javafx.com/fxml" prefHeight="700"
            prefWidth="526">

    <VBox alignment="CENTER" spacing="20" layoutX="20.0" layoutY="20.0">
        <GridPane fx:id="productionCardsGrid" alignment="CENTER" hgap="2" vgap="2">
            <ImageView fitWidth="120" preserveRatio="true" styleClass="productionCard" GridPane.columnIndex="0"
                       GridPane.rowIndex="0"/>
            <ImageView fitWidth="120" preserveRatio="true" styleClass="productionCard" GridPane.columnIndex="1"
                       GridPane.rowIndex="0"/>
            <ImageView fitWidth="120" preserveRatio="true" styleClass="productionCard" GridPane.columnIndex="2"
                       GridPane.rowIndex="0"/>
            <ImageView fitWidth="120" preserveRatio="true" styleClass="productionCard" GridPane.columnIndex="3"
                       GridPane.rowIndex="0"/>
            <ImageView fitWidth="120" preserveRatio="true" styleClass="productionCard" GridPane.columnIndex="0"
                       GridPane.rowIndex="1"/>
            <ImageView fitWidth="120" preserveRatio="true" styleClass="productionCard" GridPane.columnIndex="1"
                       GridPane.rowIndex="1"/>
            <ImageView fitWidth="120" preserveRatio="true" styleClass="productionCard" GridPane.columnIndex="2"
                       GridPane.rowIndex="1"/>
            <ImageView fitWidth="120" preserveRatio="true" styleClass="productionCard" GridPane.columnIndex="3"
                       GridPane.rowIndex="1"/>
            <ImageView fitWidth="120" preserveRatio="true" styleClass="productionCard" GridPane.columnIndex="0"
                       GridPane.rowIndex="2"/>
            <ImageView fitWidth="120" preserveRatio="true" styleClass="productionCard" GridPane.columnIndex="1"
                       GridPane.rowIndex="2"/>
            <ImageView fitWidth="120" preserveRatio="true" styleClass="productionCard" GridPane.columnIndex="2"
                       GridPane.rowIndex="2"/>
            <ImageView fitWidth="120" preserveRatio="true" styleClass="productionCard" GridPane.columnIndex="3"
                       GridPane.rowIndex="2"/>
        </GridPane>

        <Label styleClass="inputLabelSmall" text="Click on a card to purchase it"/>
        <Button fx:id="productionCardBackBtn" styleClass="btn" text="Back"/>
    </VBox>
</AnchorPane>
