<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="chooseResPane" id="backgroundStart" prefHeight="600.0" prefWidth="950.0"
            xmlns="https://javafx.com/javafx"
            xmlns:fx="https://javafx.com/fxml">
    <center>
        <VBox alignment="CENTER" spacing="20" BorderPane.alignment="CENTER">
            <children>
                <VBox alignment="CENTER" spacing="5">
                    <children>
                        <Label alignment="CENTER" styleClass="inputLabel" text="You can choose"/>
                        <Label fx:id="chooseResLbl" alignment="CENTER" styleClass="inputLabel" text=""/>
                        <Label fx:id="resPluralLbl" alignment="CENTER" styleClass="inputLabel" text="resource"/>
                        <Label fx:id="chooseFaithLbl" alignment="CENTER" styleClass="inputLabelSmall" text=""/>
                    </children>
                </VBox>
                <HBox alignment="CENTER" spacing="20">
                    <children>
                        <VBox alignment="CENTER" spacing="10">
                            <children>
                                <ImageView fitHeight="120.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../img/pawns/stone.png"/>
                                    </image>
                                </ImageView>
                                <HBox alignment="CENTER" spacing="2">
                                    <children>
                                        <Button fx:id="stoneSubBtn" mnemonicParsing="false" styleClass="btnSqAlt"
                                                text="-"/>
                                        <Label fx:id="stoneLbl" alignment="CENTER" styleClass="resourceNumLabel"
                                               text="0"/>
                                        <Button fx:id="stoneAddBtn" mnemonicParsing="false" styleClass="btnSqAlt"
                                                text="+"/>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                        <VBox alignment="CENTER" spacing="10">
                            <children>
                                <ImageView fitHeight="120.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../img/pawns/servant.png"/>
                                    </image>
                                </ImageView>
                                <HBox alignment="CENTER" spacing="2">
                                    <children>
                                        <Button fx:id="servantSubBtn" mnemonicParsing="false" styleClass="btnSqAlt"
                                                text="-"/>
                                        <Label fx:id="servantLbl" alignment="CENTER" styleClass="resourceNumLabel"
                                               text="0"/>
                                        <Button fx:id="servantAddBtn" mnemonicParsing="false" styleClass="btnSqAlt"
                                                text="+"/>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                        <VBox alignment="CENTER" spacing="10">
                            <children>
                                <ImageView fitHeight="120.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../img/pawns/coin.png"/>
                                    </image>
                                </ImageView>
                                <HBox alignment="CENTER" spacing="2">
                                    <children>
                                        <Button fx:id="coinSubBtn" mnemonicParsing="false" styleClass="btnSqAlt"
                                                text="-"/>
                                        <Label fx:id="coinLbl" alignment="CENTER" styleClass="resourceNumLabel"
                                               text="0"/>
                                        <Button fx:id="coinAddBtn" mnemonicParsing="false" styleClass="btnSqAlt"
                                                text="+"/>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                        <VBox alignment="CENTER" spacing="10">
                            <children>
                                <ImageView fitHeight="120.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../img/pawns/shield.png"/>
                                    </image>
                                </ImageView>
                                <HBox alignment="CENTER" spacing="2">
                                    <children>
                                        <Button fx:id="shieldSubBtn" mnemonicParsing="false" styleClass="btnSqAlt"
                                                text="-"/>
                                        <Label fx:id="shieldLbl" alignment="CENTER" styleClass="resourceNumLabel"
                                               text="0"/>
                                        <Button fx:id="shieldAddBtn" mnemonicParsing="false" styleClass="btnSqAlt"
                                                text="+"/>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <Button fx:id="chooseResourcesBtn" mnemonicParsing="false" styleClass="btn" text="Confirm"/>
            </children>
        </VBox>
    </center>
</BorderPane>
