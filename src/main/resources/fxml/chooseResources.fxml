<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane id="background" prefHeight="400.0" prefWidth="700.0" stylesheets="@style.css"
            xmlns="https://javafx.com/javafx"
            xmlns:fx="https://javafx.com/fxml">
    <center>
        <VBox alignment="CENTER" spacing="20" stylesheets="@style.css" BorderPane.alignment="CENTER">
            <children>
                <VBox alignment="CENTER" spacing="5">
                    <children>
                        <Label alignment="CENTER" styleClass="inputLabel" stylesheets="@style.css"
                               text="You can choose"/>
                        <Label fx:id="chooseResLbl" alignment="CENTER" styleClass="inputLabel" stylesheets="@style.css"
                               text=""/>
                        <Label alignment="CENTER" styleClass="inputLabel" stylesheets="@style.css" text="Resources"/>
                        <Label fx:id="chooseFaithLbl" alignment="CENTER" styleClass="inputLabelSmall"
                               stylesheets="@style.css" text=""/>
                    </children>
                </VBox>
                <HBox alignment="CENTER" spacing="20">
                    <children>
                        <VBox alignment="CENTER" spacing="10">
                            <children>
                                <ImageView fitHeight="120.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../img/pawns/stone.png"/>
                                    </image>
                                </ImageView>
                                <HBox alignment="CENTER" spacing="2">
                                    <children>
                                        <Button fx:id="StoneSubBtn" mnemonicParsing="false" styleClass="btnSq"
                                                stylesheets="@style.css" text="-"/>
                                        <Label fx:id="StoneLbl" alignment="CENTER" styleClass="resourceNumLabel"
                                               stylesheets="@style.css" text="0"/>
                                        <Button fx:id="StoneAddBtn" mnemonicParsing="false" styleClass="btnSq"
                                                stylesheets="@style.css" text="+"/>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                        <VBox alignment="CENTER" spacing="10">
                            <children>
                                <ImageView fitHeight="120.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../img/pawns/servant.png"/>
                                    </image>
                                </ImageView>
                                <HBox alignment="CENTER" spacing="2">
                                    <children>
                                        <Button fx:id="ServantSubBtn" mnemonicParsing="false" styleClass="btnSq"
                                                stylesheets="@style.css" text="-"/>
                                        <Label fx:id="ServantLbl" alignment="CENTER" styleClass="resourceNumLabel"
                                               stylesheets="@style.css" text="0"/>
                                        <Button fx:id="ServantAddBtn" mnemonicParsing="false" styleClass="btnSq"
                                                stylesheets="@style.css" text="+"/>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                        <VBox alignment="CENTER" spacing="10">
                            <children>
                                <ImageView fitHeight="120.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../img/pawns/coin.png"/>
                                    </image>
                                </ImageView>
                                <HBox alignment="CENTER" spacing="2">
                                    <children>
                                        <Button fx:id="CoinSubBtn" mnemonicParsing="false" styleClass="btnSq"
                                                stylesheets="@style.css" text="-"/>
                                        <Label fx:id="CoinLbl" alignment="CENTER" styleClass="resourceNumLabel"
                                               stylesheets="@style.css" text="0"/>
                                        <Button fx:id="CoinAddBtn" mnemonicParsing="false" styleClass="btnSq"
                                                stylesheets="@style.css" text="+"/>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                        <VBox alignment="CENTER" spacing="10">
                            <children>
                                <ImageView fitHeight="120.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../img/pawns/shield.png"/>
                                    </image>
                                </ImageView>
                                <HBox alignment="CENTER" spacing="2">
                                    <children>
                                        <Button fx:id="ShieldSubBtn" mnemonicParsing="false" styleClass="btnSq"
                                                stylesheets="@style.css" text="-"/>
                                        <Label fx:id="ShieldLbl" alignment="CENTER" styleClass="resourceNumLabel"
                                               stylesheets="@style.css" text="0"/>
                                        <Button fx:id="ShieldAddBtn" mnemonicParsing="false" styleClass="btnSq"
                                                stylesheets="@style.css" text="+"/>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <Button fx:id="chooseResourcesBtn" mnemonicParsing="false" styleClass="btn" stylesheets="@style.css"
                        text="Confirm"/>
            </children>
        </VBox>
    </center>
</BorderPane>
